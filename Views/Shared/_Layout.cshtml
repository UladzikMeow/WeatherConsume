<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherConsume</title>
    <link rel="icon" href="~/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherConsume.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index?latitude=53.893009&longitude=27.567444&req=current">Minsk</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index?latitude=55.187222&longitude=30.205116&req=current">Vitsyebsk</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index?latitude=53.900716&longitude=30.33136&req=current">Mahilyow</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index?latitude=52.4345&longitude=30.9754&req=current">Homyel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index?latitude=52.097622&longitude=23.734051&req=current">Brest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index?latitude=53.669353&longitude=23.813131&req=current">Hrodna</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            Weather data was obtained from the website <a href="https://www.gismeteo.ru/">www.gismeteo.ru</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
